{
  "identity": {
    "persona": "E1 - The Anti-AI Designer",
    "principles": [
      "Fusion over Imitation",
      "Emotion First (Clinical Precision + Calm Authority)",
      "Content is King (Data Clarity)",
      "Zoom In (Focus on Status)",
      "Negative Space (Breathing room in dense data)",
      "Contrast (High visibility for emergency)"
    ]
  },
  "typography": {
    "headings": {
      "family": "Manrope, sans-serif",
      "weights": ["600", "700", "800"],
      "usage": "Page titles, Card headers, Modal titles",
      "letterSpacing": "tracking-tight"
    },
    "body": {
      "family": "Inter, sans-serif",
      "weights": ["400", "500"],
      "usage": "Table data, descriptions, inputs",
      "letterSpacing": "tracking-normal"
    },
    "mono": {
      "family": "JetBrains Mono, monospace",
      "usage": "Vehicle IDs, Timestamps, Ticket Numbers"
    }
  },
  "colors": {
    "theme": "light",
    "palette": {
      "background": "#F8FAFC",
      "surface": "#FFFFFF",
      "surface_highlight": "#F1F5F9",
      "border": "#E2E8F0",
      "text_primary": "#0F172A",
      "text_secondary": "#64748B",
      "primary": "#0F172A",
      "primary_foreground": "#FFFFFF",
      "accent_critical": "#EF4444",
      "accent_warning": "#F59E0B",
      "accent_success": "#10B981",
      "accent_info": "#3B82F6",
      "accent_neutral": "#94A3B8"
    },
    "status_colors": {
      "pending": "bg-red-50 text-red-700 border-red-200",
      "confirmed": "bg-blue-50 text-blue-700 border-blue-200",
      "in_progress": "bg-amber-50 text-amber-700 border-amber-200",
      "completed": "bg-emerald-50 text-emerald-700 border-emerald-200",
      "available": "bg-emerald-100 text-emerald-800",
      "busy": "bg-red-100 text-red-800",
      "maintenance": "bg-gray-100 text-gray-800"
    }
  },
  "layout": {
    "grid_system": "Bento Grid Mode B (High Density)",
    "spacing": {
      "container_padding": "p-4 md:p-6",
      "item_gap": "gap-4",
      "internal_padding": "p-4"
    },
    "dispatch_layout": {
      "structure": "Split Screen (35% Left / 65% Right)",
      "left_panel": "Incoming Requests & Booking List",
      "right_panel": "Fleet Status & Live Map",
      "mobile_strategy": "Tabbed view (Bookings | Fleet) instead of split screen"
    }
  },
  "components": {
    "shadcn_customization": {
      "card": "rounded-xl border-border shadow-sm hover:shadow-md transition-all duration-200",
      "button": "rounded-lg font-medium tracking-wide",
      "badge": "rounded-md px-2 py-0.5 font-semibold uppercase text-[10px] tracking-wider",
      "input": "bg-white border-gray-200 focus:ring-2 focus:ring-slate-900 focus:border-transparent"
    },
    "drag_and_drop": {
      "library": "dnd-kit",
      "interaction": "Drag 'Booking Card' from Left Panel -> Drop onto 'Vehicle Card' in Right Panel",
      "visual_feedback": "Highlight drop target with ring-2 ring-primary ring-offset-2"
    },
    "notifications": {
      "library": "sonner",
      "position": "top-right"
    }
  },
  "visual_enhancers": {
    "glassmorphism": "backdrop-blur-md bg-white/80 border-white/20 shadow-lg (Use for floating map controls)",
    "borders": "1px solid #E2E8F0",
    "shadows": "shadow-sm for cards, shadow-xl for floating elements"
  },
  "media": {
    "icons": "Lucide React (default)",
    "image_urls": {
      "medical_staff": [
        "https://images.unsplash.com/photo-1758691463605-f4a3a92d6d37?crop=entropy&cs=srgb&fm=jpg&q=85",
        "https://images.unsplash.com/photo-1758691462615-beafbf50bf3c?crop=entropy&cs=srgb&fm=jpg&q=85",
        "https://images.unsplash.com/photo-1758691463626-0ab959babe00?crop=entropy&cs=srgb&fm=jpg&q=85",
