  "page_specifics": {
    "dispatch_console": {
      "path": "/app/frontend/src/pages/DispatchConsole.jsx",
      "route": "/dispatch",
      "features": [
        "Unified view of Bookings and Fleet",
        "Drag and drop assignment",
        "Live Map integration (reuse AdminLiveMap)",
        "Real-time status updates",
        "Quick filters (Pending, Active, All)"
      ],
      "instructions": "Create a new page 'DispatchConsole'. Use a resizable split-pane layout if possible, or a fixed grid. Left side: 'BookingQueue' component. Right side: 'FleetGrid' component + 'Map' toggle. Ensure 'LanguageContext' is used for all text labels."
    }
  },
  "universal_guidelines": [
    "Use 'sonner' for all toast notifications.",
    "Ensure all interactive elements have 'data-testid'.",
    "Do not use 'transition: all'. Animate specific properties.",
    "Use 'Manrope' for headings and 'Inter' for body text.",
    "Maintain high contrast for accessibility (WCAG AA).",
    "Mobile-first responsive design is mandatory."
  ]
